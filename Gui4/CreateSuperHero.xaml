<Window x:Class="Gui4.CreateSuperHero"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gui4"
        mc:Ignorable="d"
        Title="CreateSuperHero" Height="450" Width="800">
    <StackPanel x:Name="stack">
        <Label Content="Type" Padding="10" Background="LightBlue" />
        <TextBox Text="{Binding Actual.Type, UpdateSourceTrigger=Explicit}" Padding="10"/>
        <Label Content="Power" Padding="10" Background="LightBlue" />
        <TextBox Text="{Binding Actual.Power, UpdateSourceTrigger=Explicit}" Padding="10"/>
        <Label Content="Speed" Padding="10" Background="LightBlue" />
        <TextBox Text="{Binding Actual.Speed, UpdateSourceTrigger=Explicit}" Padding="10"/>
        <Label Content="Speed" Padding="10" Background="LightBlue" />
        <TextBox Text="{Binding Actual.Karma, UpdateSourceTrigger=Explicit}" Padding="10"/>
        <Button Content="Create" Padding="10" Click="Button_Click"  />
    </StackPanel>
</Window>
